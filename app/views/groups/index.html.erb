<section
  id="group"
  class="w-full min-h-screen bg-DesignWhite items-center flex flex-col"
>
  <header class="header-mob">
    <i class="fa fa-bars link-hover"></i>
    <h1 class='font-ProximaBold font-medium'>Categories</h1>
    <i class="fa fa-search link-hover"></i>
  </header>
  <div
    class="
      flex
      w-full
      justify-between
      items-center
      p-4
      border-b-2
      bg-white
      text-sm
      mb-5
    "
  >
    <h1 class="text-ProximaLight text-DesignGray">Gift credit</h1>
    <p>$ 0</p>
  </div>
  <p class="text-green-500"><%= notice %></p>
  <p class="text-red-500"><%= alert %></p>
  <div id="groups" class="min-w-full flex flex-col">
    <%= render @groups %>
  </div>
  <div
    class="
      fixed
      z-10
      bottom-0
      flex
      items-center
      justify-center
      bg-DesignGreen
      w-full
      h-20
      px-5
      py-3
      text-white
      font-ProximaLight
      text-center
    "
  >
    <%= link_to 'New Category', new_group_path, class:"text-xl flex items-center justify-center border-solid border-2 w-full h-full transition ease-in-out delay-150 hover:scale-y-110 duration-300" %>
  </div>
</section>
