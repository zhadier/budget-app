<div
  id="<%= dom_id expense %>"
  class="
    mx-4
    my-2
    p-5
    rounded-md
    bg-white
    flex
    items-center
    justify-between
  "
>
  <div class="flex flex-col space-y-2 h-full">
    <p class="text-2xl font-ProximaLight text-slate-600"><%= expense.name.capitalize %></p>
    <p class="text-xs text-DesignGray"><%= expense.created_at %></p>
  </div>
  <div class="flex flex-col space-y-2 items-center">
    <div class="flex items-center space-x-1">
      <span>$
        <%= expense.amount %></span>
    </div>
    <%= button_to "Delete", group_expense_path(@group.id, expense.id), class:"rounded-md p-1 bg-gray-200 inline-block text-xs transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 hover:bg-indigo-500 duration-300", method: :delete %>
  </div>
</div>
